<?xml version='1.0' encoding='utf-8'?>
<widget id="com.espritsolutions.multidominoes" android-versionCode="4" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MultiDominoes</name>
    <description>
         Play Dominoes with your friends through your Smart TV
    </description>
	<author email="info@esprit-solutions.com" href="http://esprit-solutions.com">
        eSprit Solutions Team
    </author>
    <content src="index.html" />
	<plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
	<platform name="android">
    <preference name="AndroidLaunchMode" value="singleTop"/>
<preference name="android-minSdkVersion" value="15"/>
<preference name="android-maxSdkVersion" value="18"/>
<preference name="android-targetSdkVersion" value="18"/>
	<preference name="orientation" value="landscape" />
</platform>

</widget>
